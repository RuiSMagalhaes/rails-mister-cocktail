<h1>Adding new dose</h1>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <% if @dose.errors.any? %>
  <h3>You have these errors:</h3>
  <ul>
    <% @dose.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-inputs">
    <%= f.association :ingredient %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>

<%= link_to "Back", cocktail_path(@cocktail) %>
