<div class="wrapper">
  <div class="card-category" style="background-image:url(https://images.unsplash.com/photo-1531002329786-97e3efcb754b?ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80)">
  Cocktails List
  </div>



  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-category cocktail" style="background-image: url('<%= cl_image_path cocktail.photo, crop: :fill %>')" >
          <%= cocktail.name %>
        </div>
      <% end  %>
    <% end %>
    </div>
    <%= link_to "Add a cocktail" ,new_cocktail_path, class: "btn btn-gradient new-cocktail" %>



  </div>
</div>
